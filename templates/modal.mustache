{{!
    @template tiny_pinyin/modal

    Modal to insert Pinyin characters within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
        "elementid": "exampleId"
    }
}}

{{< core/modal }}
    {{$title}}
        {{#str}} insertpinyin, tiny_pinyin {{/str}}
    {{/title}}

    {{$body}}
        <div class="tiny_pinyin_chars">
            {{#pinyinchars}}
                <button class="btn btn-secondary tiny_pinyin_btn" data-value="{{{id}}}" aria-label="{{{name}}}">
                    {{{name}}}
                </button>
            {{/pinyinchars}}
        </div>
    {{/body}}

{{/ core/modal }}
